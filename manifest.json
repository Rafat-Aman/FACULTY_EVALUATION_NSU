{
  "manifest_version": 3,
  "name": "Faculty Evaluator",
  "version": "1.0",
  "description": "Pop-up based faculty evaluation auto-filler",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],  
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
